{{#unless (lte currentPage 0)}}
  {{link-to '←Back' (query-params page=(dec currentPage))}}
{{/unless}}

{{#each pages as |i|}}
  {{link-to i (query-params page=i)
    class=(concat
      'story-pagination-number'
      (if (eq i currentPage) ' -current')
    )
  }}
{{/each}}

{{#unless (gte currentPage pages.lastObject)}}
  {{link-to 'Next→' (query-params page=(inc currentPage))}}
{{/unless}}